<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/eventview"
    android:background="@drawable/organgecloseup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:text="카페드프랑"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="30dp"
                    android:id="@+id/c_name" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">


                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/c_thumnail"
                        android:src="@drawable/cafedefran"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:text="서울시 강남구 센트럴시티"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/c_addr" />

                        <TextView
                            android:text="1500원/개"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="40dp"
                            android:id="@+id/c_price" />


                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="진행중"
                            android:gravity="center"
                            android:background="#f9cd97"
                            android:padding="1dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16dp"
                            android:id="@+id/c_status"
                            android:stateListAnimator="@null"
       />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:text="주문 시작 날짜"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:id="@+id/a_start" />

                    <Button
                        android:text="날짜 수정"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="11dp"
                        android:stateListAnimator="@null"
                        android:paddingRight="15dp"
                        android:id="@+id/start_date" />

                    <TextView
                        android:text="시작 날짜를 선택해주세요"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="10dp"
                        android:textSize="10dp"
                        android:id="@+id/start_msg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:text="주문 마감 날짜"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:id="@+id/a_end" />
                    <Button
                        android:text="날짜 수정"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:stateListAnimator="@null"
                        android:paddingRight="15dp"
                        android:textSize="11dp"
                        android:id="@+id/end_date" />

                    <TextView
                        android:text="시작 날짜를 선택해주세요"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingLeft="10dp"
                        android:textSize="10dp"
                        android:id="@+id/end_msg" />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:text="맛 종류"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingTop="15dp"
                        android:id="@+id/a_flavor" />

                    <EditText
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:hint="콤마로 구분하기"
                        android:textSize="10dp"
                        android:id="@+id/b_flavor"
                        android:layout_weight="0.40" />


                </LinearLayout>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:text="저장하기"
                    android:stateListAnimator="@null"
                    android:id="@+id/complete"
                    android:layout_gravity="center_horizontal"/>



            </LinearLayout>



    </ScrollView>


</LinearLayout>